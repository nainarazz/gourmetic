{
	"version": 2,
	"builds": [
		{ "src": "src/package.json", "use": "@now/next" },
		{ "src": "build-api/index.js", "use": "@now/node-server" }
	],
	"routes": [
		{ "src": "/api", "dest": "/build-api/index.js" },
		{ "src": "^/recipe/(?<name>[^/]+)", "dest": "/src/recipe?name=$name" },
		{ "src": "/(.*)", "dest": "src/$1" }
	],
	"build": {
		"env": {
			"MONGO_URL": "@mongo_url",
			"SENTRY_DSN": "@sentry"
		}
	}
}
